<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProgressViewActivity">

    <com.dzenm.ProgressView
        android:id="@+id/progress_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:currentValue="46"
        app:isTextStatic="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:progressColor="@android:color/holo_orange_dark" />

    <com.dzenm.ProgressView
        android:id="@+id/progress_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:currentValue="18"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_view1"
        app:progressColor="@color/teal_200" />

    <com.dzenm.ProgressView
        android:id="@+id/progress_view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:currentValue="8"
        app:isTextStatic="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_view2"
        app:maxValue="10"
        app:textColor="@android:color/holo_red_dark" />

    <com.dzenm.ProgressView
        android:id="@+id/progress_view4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:currentValue="34"
        app:isStrokeCapRound="false"
        app:isTextStatic="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_view3"
        app:progressColor="@color/purple_500" />

    <com.dzenm.ProgressView
        android:id="@+id/progress_view5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:currentValue="71"
        app:isTextStatic="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_view4"
        app:progressColor="@android:color/holo_red_dark"
        app:text="" />

    <com.dzenm.ProgressView
        android:id="@+id/progress_view6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:currentValue="58"
        app:isStrokeCapRound="false"
        app:isTextStatic="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_view5"
        app:progressColor="@android:color/holo_blue_bright"
        app:textColor="@android:color/holo_blue_bright" />

    <com.dzenm.ProgressView
        android:id="@+id/progress_view7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:currentValue="12"
        app:isTextStatic="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_view6"
        app:progressColor="@android:color/holo_green_light"
        app:progressHeight="16dp"
        app:text="" />

    <com.dzenm.ProgressView
        android:id="@+id/progress_view8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:isTextStatic="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_view7"
        app:progressColor="@android:color/holo_orange_light" />

    <com.dzenm.ProgressView
        android:id="@+id/progress_view9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:currentValue="100"
        app:isTextStatic="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_view8"
        app:progressColor="@android:color/holo_red_light" />

</androidx.constraintlayout.widget.ConstraintLayout>